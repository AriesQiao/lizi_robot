<?xml version="1.0"?>
<launch>



<group ns="lizi_3">
<machine name="lizi3" address="192.168.0.103" user="lizi" password="a" env-loader="~/catkin_ws/src/lizi/config/lizi_env/lizi3_env.sh" default="true"/>

<rosparam file="$(find lizi)/config/default.yaml" command="load" />
<param name="Lizi_ID" value="3" type="str"/> 

<node  pkg="rosserial_python" type="serial_node.py" name="serial_node" output="screen">
      <param name="~port" value="/dev/LiziDUE" />
      <param name="~baud" value="57600" />
</node>

<node  name="lizi_node" pkg="lizi" type="lizi_node" output="screen" />

 <node  pkg="usb_cam" type="usb_cam_node" name="usb_cam_node" output="screen">
        <param name="~video_device" value="/dev/video0" />
        <param name="~camera_frame_id" value="lizi_3_Camera_link" />
<param name="~pixel_format" value="yuyv" />
  </node>

<include file="$(find openni2_launch)/launch/openni2.launch">
<arg name="camera" value="lizi_3_Asus_Camera" />
<arg name="machine" value="lizi3" />
</include>


</group>


<group ns="lizi_4">
<machine name="lizi4" address="192.168.0.104" user="lizi" password="a" env-loader="~/catkin_ws/src/lizi/config/lizi_env/lizi4_env.sh" default="true"/>

<rosparam file="$(find lizi)/config/default.yaml" command="load" />
<param name="Lizi_ID" value="4" type="str"/> 

<node  pkg="rosserial_python" type="serial_node.py" name="serial_node" output="screen">
      <param name="~port" value="/dev/LiziDUE" />
      <param name="~baud" value="57600" />
</node>

<node  name="lizi_node" pkg="lizi" type="lizi_node" output="screen" />

 <node  pkg="usb_cam" type="usb_cam_node" name="usb_cam_node" output="screen">
        <param name="~video_device" value="/dev/video0" />
        <param name="~camera_frame_id" value="lizi_4_Camera_link" />
<param name="~pixel_format" value="yuyv" />
  </node>

<include file="$(find openni2_launch)/launch/openni2.launch">
<arg name="camera" value="lizi_4_Asus_Camera" />
<arg name="machine" value="lizi4" />
</include>

</group>



<!-- <include file="$(find lizi)/launch/multi_lizi_control.launch"/> -->






</launch>

 
